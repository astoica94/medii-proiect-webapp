@page
@model WebApplication1.Pages.TaskItems.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TaskItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TaskItem.ITask.TaskName" class="control-label"></label>
                <select asp-for="TaskItem.ITask.TaskName" class="form-control" asp-items="ViewBag.ITaskName"></select>
            </div>
            <div class="form-group">
                <label asp-for="TaskItem.TaskText" class="control-label"></label>
                <input asp-for="TaskItem.TaskText" class="form-control" />
                <span asp-validation-for="TaskItem.TaskText" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TaskItem.TaskDone" /> @Html.DisplayNameFor(model => model.TaskItem.TaskDone)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
