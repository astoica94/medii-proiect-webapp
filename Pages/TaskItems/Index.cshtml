@page
@model WebApplication1.Pages.TaskItems.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Task items</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].ITask)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].TaskText)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaskItem[0].TaskDone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TaskItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ITask.TaskName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskDone)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
